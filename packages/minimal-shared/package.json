{
  "name": "minimal-shared",
  "author": "Minimals",
  "version": "1.0.2",
  "description": "Shared hooks and utils used by Mnimal UI and Zone UI.",
  "keywords": [
    "typescript",
    "react",
    "hooks",
    "utils"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/minimal-ui-kit/minimal-shared/tree/main/packages/minimal-shared"
  },
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/*/index"
      ]
    }
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "default": "./dist/hooks/index.js"
    },
    "./hooks/*": {
      "types": "./dist/hooks/*/index.d.ts",
      "default": "./dist/hooks/*/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "default": "./dist/utils/index.js"
    },
    "./utils/*": {
      "types": "./dist/utils/*/index.d.ts",
      "default": "./dist/utils/*/index.js"
    }
  },
  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=16384' tsup --watch",
    "build": "pnpm test && NODE_OPTIONS='--max-old-space-size=16384' tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint --fix \"**/*.{js,jsx,ts,tsx}\"",
    "lint:print": "npx eslint --print-config eslint.config.mjs > eslint-current-config.json",
    "clean": "rm -rf node_modules .turbo .next out dist build",
    "re:build": "pnpm clean && pnpm install && pnpm build",
    "tsc:print": "npx tsc --showConfig"
  },
  "dependencies": {
    "es-toolkit": "^1.27.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.0",
    "@types/react": "18.3.12",
    "chalk": "^5.3.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "internal-eslint-config": "workspace:*",
    "internal-ts-config": "workspace:*",
    "jsdom": "^25.0.1",
    "react": "^18.3.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.6"
  },
  "peerDependencies": {
    "react": "^18"
  },
  "pnpm": {
    "overrides": {
      "cross-spawn@>=7.0.0 <7.0.5": ">=7.0.5"
    }
  }
}

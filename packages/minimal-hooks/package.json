{
  "name": "@minimals/hooks",
  "author": "Minimals",
  "version": "1.0.0",
  "description": "Shared hooks used by Mnimal UI and Zone UI.",
  "keywords": [
    "typescript",
    "react",
    "hooks",
    "minimals hooks"
  ],
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "files": [
    "dist"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "src/*",
        "src/*/index"
      ]
    }
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./src/*/index.ts",
      "default": "./dist/*/index.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint --fix \"**/*.{js,jsx,ts,tsx}\"",
    "lint:print": "npx eslint --print-config eslint.config.mjs > eslint-current-config.json",
    "clean": "rm -rf node_modules .turbo .next out dist build",
    "re:build": "pnpm clean && pnpm install && pnpm build",
    "ts:print": "npx tsc --showConfig"
  },
  "dependencies": {
    "@minimals/utils": "workspace:*"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.7.5",
    "@types/react": "18.3.11",
    "chalk": "^5.3.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "internal-eslint-config": "workspace:*",
    "internal-ts-config": "workspace:*",
    "jsdom": "^25.0.1",
    "react": "^18.3.1",
    "tsup": "^8.3.0",
    "typescript": "^5.5.4",
    "vitest": "^2.1.2"
  },
  "peerDependencies": {
    "react": "^17 || ^18"
  }
}

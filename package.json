{
  "name": "my-turborepo",
  "packageManager": "npm@10.8.2",
  "engines": {
    "node": "20.x"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build lint",
    "build:release": "turbo build lint --filter=!./apps/*",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo run clean && rm -rf .turbo node_modules",
    "fm:check": "prettier --check \"**/*.{js,jsx,ts,tsx}\"",
    "fm:fix": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "changeset:add": "npx changeset add",
    "re:dev": "npm run clean && npm install && turbo dev",
    "re:build": "npm run clean && npm install && turbo build",
    "prerelease": "npm run build && changeset version",
    "release": "npm run build:release && changeset version && changeset publish"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.1.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.8"
  }
}
